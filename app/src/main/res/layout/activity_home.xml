<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/milk"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="@dimen/size_6"
        android:background="@color/milk"
        android:padding="@dimen/size_6">
        <ImageView
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45"
            android:src="@drawable/godong1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_24"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Brotowali Dictionary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Most popular dictionary apps"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_35"
            android:foregroundGravity="center"
            android:overScrollMode="never"
            android:background="@color/milk"
            android:clipToPadding="false"/>
        <Button
            android:id="@+id/home_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/emerald"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/size_100"
            android:textColor="@color/white"
            android:text="Lets Translate"/>
    </RelativeLayout>

</LinearLayout>