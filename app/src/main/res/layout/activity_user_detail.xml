<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/milk"
    tools:context=".UserDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="@dimen/size_6"
        android:background="@color/milk"
        android:padding="@dimen/size_6">
        <ImageView
            android:id="@+id/back_ico"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:src="@drawable/ic_left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_12"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_24"
                    android:textColor="@color/tc_macaron"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:text="Brotowali User"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/tc_macaron"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:text="User detail information"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_45"
                android:layout_height="@dimen/size_45"
                android:src="@drawable/godong1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_20"
        android:padding="@dimen/size_6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:layout_marginHorizontal="@dimen/size_6"
            android:text="Username"/>
        <TextView
            android:id="@+id/detail_username"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="text"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_grey"
            android:drawableStart="@drawable/ic_user"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:layout_marginHorizontal="@dimen/size_6"
            android:text="Password"/>
        <TextView
            android:id="@+id/detail_password"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="textPassword"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_key"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Fullname"/>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="text"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_contact"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Email"/>
        <TextView
            android:id="@+id/detail_email"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="textEmailAddress"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_email"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Bio"/>
        <TextView
            android:id="@+id/detail_bio"
            android:layout_width="@dimen/size_250"
            android:layout_height="@dimen/size_100"
            android:textSize="@dimen/text_16"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_6"
            android:background="@drawable/round_white"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"
            android:hint="Your beautiful short story"/>

    </LinearLayout>
</LinearLayout>