<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/milk"
    tools:context=".Translate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="@dimen/size_6"
        android:background="@color/milk"
        android:padding="@dimen/size_6">
        <ImageView
            android:id="@+id/back_ico"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:src="@drawable/ic_left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_12"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_24"
                    android:textColor="@color/tc_macaron"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:text="Brotowali Translate"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/tc_macaron"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:text="Most popular dictionary apps"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_45"
                android:layout_height="@dimen/size_45"
                android:src="@drawable/godong1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="vertical"
        android:padding="@dimen/size_6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Select language :"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/size_12"
            android:gravity="center"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/trans_spinner_from"
                android:layout_width="@dimen/size_120"
                android:layout_height="wrap_content"
                android:elevation="@dimen/size_6"
                android:background="@drawable/spinner_selector"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/trans_swap_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap"
                android:layout_marginHorizontal="@dimen/size_12"
                android:layout_margin="@dimen/size_6"
                android:backgroundTint="@color/mint_macaron"/>
            <Spinner
                android:id="@+id/trans_spinner_target"
                android:layout_width="@dimen/size_120"
                android:layout_height="wrap_content"
                android:elevation="@dimen/size_6"
                android:background="@drawable/spinner_selector"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginStart="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Types beutiful words :"/>
        <EditText
            android:id="@+id/trans_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:padding="@dimen/size_12"
            android:background="@drawable/round_white"
            android:textSize="@dimen/text_16"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="@color/dark_grey"
            android:gravity="top|left"
            android:elevation="@dimen/size_6"
            android:layout_margin="@dimen/size_6"
            android:layout_marginTop="@dimen/size_12"
            android:hint="Lets start"/>
        <Button
            android:id="@+id/trans_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:backgroundTint="@color/mint_macaron"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_6"
            android:textAllCaps="false"
            android:text="Translate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginStart="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Your beutiful words :"/>
        <TextView
            android:id="@+id/trans_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:padding="@dimen/size_12"
            android:background="@drawable/round_white"
            android:textSize="@dimen/text_16"
            android:scrollbars="vertical"
            android:textColor="@color/dark_grey"
            android:gravity="top|left"
            android:elevation="@dimen/size_6"
            android:layout_margin="@dimen/size_6"
            android:layout_marginTop="@dimen/size_12"/>
    </LinearLayout>
</LinearLayout>