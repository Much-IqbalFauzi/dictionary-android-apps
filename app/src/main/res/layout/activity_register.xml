<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/milk"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="@dimen/size_6"
        android:background="@color/milk"
        android:padding="@dimen/size_6">
        <ImageView
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45"
            android:src="@drawable/godong1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_24"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Brotowali Register"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="New user register"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_20"
        android:padding="@dimen/size_6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:layout_marginHorizontal="@dimen/size_6"
            android:text="Username"/>
        <EditText
            android:id="@+id/regis_username"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="text"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_user"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:layout_marginHorizontal="@dimen/size_6"
            android:text="Password"/>
        <EditText
            android:id="@+id/regis_password"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="textPassword"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_key"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Fullname"/>
        <EditText
            android:id="@+id/regis_name"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="text"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_contact"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Email"/>
        <EditText
            android:id="@+id/regis_email"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="textEmailAddress"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_email"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:layout_marginHorizontal="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:text="Bio"/>
        <EditText
            android:id="@+id/regis_bio"
            android:layout_width="@dimen/size_250"
            android:layout_height="@dimen/size_100"
            android:textSize="@dimen/text_16"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:elevation="@dimen/size_5"
            android:layout_marginHorizontal="@dimen/size_6"
            android:drawablePadding="@dimen/size_6"
            android:hint="Tell us your beautiful short story"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginHorizontal="@dimen/size_6">
            <Button
                android:id="@+id/regis_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/antarctics"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/size_18"
                android:text="Cancel"/>
            <Button
                android:id="@+id/regis_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/emerald"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/size_18"
                android:text="Register"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>