<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/milk"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/size_6">
        <ImageView
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45"
            android:src="@drawable/godong1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_24"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Brotowali Login"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/tc_macaron"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Simple dictionary"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_20"
        android:padding="@dimen/size_6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:text="Username"/>
        <EditText
            android:id="@+id/login_username"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="text"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_user"
            android:elevation="@dimen/size_5"
            android:drawablePadding="@dimen/size_6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:textSize="@dimen/text_16"
            android:textColor="@color/dark_grey"
            android:text="Password"/>
        <EditText
            android:id="@+id/login_password"
            android:layout_width="@dimen/size_250"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:inputType="textPassword"
            android:padding="@dimen/size_6"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/round_white"
            android:drawableStart="@drawable/ic_key"
            android:elevation="@dimen/size_5"
            android:drawablePadding="@dimen/size_6"/>
        <Button
            android:id="@+id/login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:backgroundTint="@color/emerald"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/size_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/dark_grey"
                android:layout_marginRight="@dimen/size_6"
                android:text="Don't have account?"/>
            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/tc_pink"
                android:textStyle="italic|bold"
                android:text="Register Here"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>